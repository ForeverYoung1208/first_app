<div id="content_ajax">
    <%= render "layouts/sidebar" %>
    <h2>услуги</h2>
    <br/>
    <table>
      <tr>
        <th>Наименование</th>
        <th>Стоимость</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @services.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.price %></td>
        <td><%= admin_link_to 'Показать', service %></td>
        <td><%= admin_link_to 'Редактировать', edit_service_path(service) %></td>
        <td><%= admin_link_to 'Удалить', service, :confirm => 'Точно?', :method => :delete %></td>
      </tr>
    <% end %>
    </table>

    <br />

    <%= admin_link_to 'Добавить услугу', new_service_path %>
</div>
