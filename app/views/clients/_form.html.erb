<%= form_for(@client) do |f| %>
  <% if @client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@client.errors.count, "error") %> - Ошибки при сохранении инф. о клиенте:</h2>

      <ul>
      <% @client.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Наименование' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label 'www' %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label 'E-mail' %><br />
    <%= f.text_field :email %>
  </div>
  <div class="actions">
    <br/>
    <%= f.submit 'Обновить информацию'%>
  </div>
<% end %>
