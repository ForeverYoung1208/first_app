<div id="sidebar">
  <div id="user_nav">

    <% if notice or alert%>
      <p class="notice"> <%= notice%></p>
      <p class="alert"> <%= alert%></p>
    <% end %>

    <% if user_signed_in? %>
      <h4>Вы вошли на сайт как <%= current_user.email %></h4>
      <%= link_to "Выйти", destroy_user_session_path, :method => :delete %>
    <% else %>
      <h4>Вы не вошли как зарегистрированный пользователь.</h4>
      <ul>
        <li> <%= link_to "Войти", new_user_session_path %> |
        <%= link_to "Новый пользователь", new_user_registration_path %></li>
      </ul>
    <% end %>
  </div>
</div>